<h1 class="page-header"><%= @band.name %></h1>

<h4 class="sub-header">Albums</h4>

<% albums = @band.albums %>
<% if albums.empty? %>
  <p>This band has no albums... yet!</p>
<% else %>
  <ul class="main-list">
    <% albums.each do |album| %>
    <li><a href="<%= album_url(album.id) %>"><p><%= album.title %></p></a></li>
    <% end %>
  </ul>
<% end %>

<h4 class="sub-header">Links</h4>

<ul class="page-links">
  <a class="button" href="<%= new_band_album_url(@band.id) %>">New Album</a>
  <a class="button" href="<%= edit_band_url %>">Edit Band</a>
  <%= button_to 'Destroy Band', band_url(@band.id) , method: :delete %>
  <a class="button" href="<%= bands_url %>">All Bands</a>
</ul>
