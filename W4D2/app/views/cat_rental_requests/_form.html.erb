<% action_url = action == :edit ? cat_rental_request_url(cat_rental_request.id) : cat_rental_requests_url %>

<form action="<%=action_url%>" method="post">
<% if action == :edit %>
  <input type="hidden" name="_method" value="patch">
<% end %>

  <label for="cat_id">Cat: </label>
  <select id="cat_id" name="cat_rental_request[cat_id]">
      <option disabled selected>--Select Cat--</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date: </label>
    <input id="start_date" type="date" name="cat_rental_request[start_date]" value="<%= cat_rental_request.start_date %>">

  <br>

  <label for="end_date">End Date: </label>
    <input id="end_date" type="date" name="cat_rental_request[end_date]" value="<%= cat_rental_request.end_date %>">

  <br>

  <input type="submit" value="Add/Edit Cat Rental Request">

</form>
